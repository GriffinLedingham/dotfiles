// Place your settings in this file to overwrite the default settings
{
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "files.trimTrailingWhitespace": true,
  "terminal.integrated.shellArgs.osx": ["-l"],
  "window.openFilesInNewWindow": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreview": true,
  "explorer.openEditors.visible": 0,
  "editor.rulers": [100],
  "window.titleBarStyle": "custom",
  "editor.fontLigatures": true,
  "workbench.editor.showTabs": "single",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "workbench.colorCustomizations": {
    "scrollbar.shadow": "#FFF0",
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>", "l"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["W"],
      "after": ["b"]
    },
    {
      "before": ["!"],
      "after": ["^"]
    },
    {
      "before": ["tab"],
      "commands": ["editor.action.indentLines"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["tab"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["W"],
      "after": ["b"]
    },
    {
      "before": ["S"],
      "after": ["c", "c"]
    },
    {
      "before": ["!"],
      "after": ["^"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [
        {
          "command": "workbench.action.closeEditorsInGroup"
        }
      ]
    },
    {
      "before": ["<leader>", "`"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.terminal.toggleTerminal"
        }
      ]
    },
    {
      "before": ["<leader>", "\\"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.toggleSidebarVisibility"
        }
      ]
    },
    {
      "before": ["<leader>", "]"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditorRight"
        }
      ]
    },
    {
      "before": ["<leader>", "-"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.splitEditorDown"
        }
      ]
    },
    {
      "before": ["<leader>", "k"],
      "after": [],
      "commands": [
        {
          "command": "quokka.createJavaScriptFile"
        }
      ]
    },
    {
      "before": ["/"],
      "after": [],
      "commands": [
        {
          "command": "actions.find"
        }
      ]
    },
    {
      "before": ["<leader>", "f"],
      "after": ["<C-d>"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["<C-u>"]
    },
    {
      "before": ["<leader>", "p"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.quickOpen",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "l"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusNextGroup",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "h"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusPreviousGroup",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "j"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusBelowGroup",
          "args": []
        }
      ]
    },
    {
      "before": ["<leader>", "k"],
      "after": [],
      "commands": [
        {
          "command": "workbench.action.focusAboveGroup",
          "args": []
        }
      ]
    },
    {
      "before": ["f"],
      "after": ["<leader>", "<leader>", "s"],
      "commands": [
        // {
        //   "command": "findThenJump.initiate",
        //   "args": []
        // }
      ]
    }
  ],
  "editor.fontSize": 16,
  "editor.colorDecorators": false,
  "css.validate": false,
  "scss.validate": false,
  "editor.cursorBlinking": "solid",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.completeFunctionCalls": true,
  "vim.handleKeys": {
    "<C-d>": true
  },
  "javascript.validate.enable": false,
  "editor.renderWhitespace": "none",
  "files.associations": {
    "*.css.php": "css"
  },
  "workbench.sideBar.location": "left",
  "editor.wordWrapColumn": 100,
  "files.autoSaveDelay": 100,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    // "**/public": true
  },
  "search.exclude": {
    // "**/public": true
  },
  "launch": {},
  "terminal.integrated.shell.osx": "/bin/bash",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "terminal.integrated.fontSize": 16,
  "terminal.external.osxExec": "kitty.app",
  "workbench.colorTheme": "One Dark Pro",
  "vim.easymotionMarkerBackgroundColor": "#22FF55",
  "vim.easymotionMarkerForegroundColorOneChar": "#000",
  "vim.easymotionIncSearchForegroundColor": "#000",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#000",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#777",
  "editor.inlineSuggest.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "extensions.ignoreRecommendations": true,
  "update.mode": "manual",
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.formatOnSave": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Solarized Light",
  "workbench.preferredHighContrastLightColorTheme": "Solarized Light",
  "workbench.preferredHighContrastColorTheme": "One Dark Pro",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "editor.tabSize": 2,
  "workbench.activityBar.location": "hidden",
  "typescript.tsserver.maxTsServerMemory": 4000,
  "explorer.compactFolders": false,
  "workbench.tree.enableStickyScroll": false,
  "accessibility.dimUnfocused.opacity": 0.6,
  "accessibility.dimUnfocused.enabled": true,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "javascript.format.enable": false,
  "typescript.surveys.enabled": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "eslint.format.enable": true
}
