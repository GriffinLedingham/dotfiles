// Place your settings in this file to overwrite the default settings
{
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.shellArgs.osx": ["-l"],
    "window.openFilesInNewWindow": "off",
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.openEditors.visible": 0,

    "window.titleBarStyle": "custom",

    "php.suggest.basic" : false,

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,

    "workbench.editor.showTabs": false,

    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,

    "editor.renderLineHighlight": "gutter",

    "emmet.excludeLanguages": [
        "php",
        "css"
      ],

    "workbench.colorCustomizations": {
        "scrollbar.shadow": "#FFF0",
        "statusBar.background": "#60adf2",
        "statusBar.noFolderBackground": "#60adf2",
        "statusBar.debuggingBackground": "#60adf2",
        "statusBar.foreground": "#343c3c"
    },

    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",

    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#97c473", "#343c3c"],
    "vim.statusBarColors.insert": ["#60adf2", "#343c3c"],
    "vim.statusBarColors.visual": ["#c775e0", "#343c3c"],
    "vim.statusBarColors.visualline": ["#c775e0", "#343c3c"],

    "vim.insertModeKeyBindings": [
        {
          "before": ["j","k"],
          "after": ["<Esc>","l"]
        }
      ],

    "vim.visualModeKeyBindings": [
        {
            "before":["W"],
            "after":["b"]
        },
        {
            "before":["!"],
            "after":["^"]
        },
        {
            "before": [
              "tab"
            ],
            "commands": [
              "editor.action.indentLines"
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [

    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
              "tab"
            ],
            "commands": [
              "editor.action.indentLines"
            ]
        },
        {
            "before":["W"],
            "after":["b"]
        },
        {
            "before":["S"],
            "after":["c","c"]
        },
        {
            "before":["!"],
            "after":["^"]
        },
        {
            "before":["<leader>","q"],
            "commands":[{"command":"workbench.action.closeEditorsInGroup"}]
        },
        {
            "before":["<leader>","`"],
            "after":[],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before":["<leader>","\\"],
            "after":[],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        {
            "before":["<leader>","]"],
            "after":[],
            "commands": [
                {
                    "command": "workbench.action.splitEditorRight"
                }
            ]
        },
        {
            "before":["<leader>","k"],
            "after":[],
            "commands": [
                {
                    "command": "quokka.createJavaScriptFile"
                }
            ]
        },
        {
            "before":["/"],
            "after":[],
            "commands": [
                {
                    "command": "actions.find"
                }
            ]
        },
        {
            "before":["<leader>","f"],
            "after":["<C-d>"]
        },
        {
            "before":["<leader>","d"],
            "after":["<C-u>"]
        },
        {
            "before":["<leader>","p"],
            "after":[],
            "commands":[
                {
                    "command":"workbench.action.quickOpen",
                    "args":[]
                }
            ]
        },
        {
            "before":["<leader>","l"],
            "after":[],
            "commands":[
                {
                    "command":"workbench.action.focusNextGroup",
                    "args":[]
                }
            ]
        },
        {
            "before":["<leader>","h"],
            "after":[],
            "commands":[
                {
                    "command":"workbench.action.focusPreviousGroup",
                    "args":[]
                }
            ]
        }
    ],
    "window.zoomLevel": 0,
    "workbench.colorTheme": "One Dark Pro Vivid",
    "workbench.statusBar.feedback.visible": false,
    "editor.fontSize": 14,
    "typescript.suggest.enabled": false,
    "typescript.suggest.autoImports": false,
    "typescript.suggest.paths": false,
    "editor.colorDecorators": false,
    "css.validate": false,
    "typescript.validate.enable": false,
    "scss.validate": false,
    "editor.cursorBlinking": "solid",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "emmet.showAbbreviationSuggestions": false
}