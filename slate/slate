# This is griffin's slate file

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind k:alt          resize +0   -10%
bind j:alt        resize +0   +10%
bind h:alt        resize -10%   +0
bind l:alt        resize +10%   +0
bind l:ctrl;alt  resize -10% +0 top-right
bind h:ctrl;alt   resize +10% +0 top-right
bind k:ctrl;alt     resize +0   +10% bottom-left
bind j:ctrl;alt   resize +0   -10% bottom-left
bind 1:ctrl         corner top-left resize:screenSizeX/2;screenSizeY/2
bind 2:ctrl         corner top-right resize:screenSizeX/2;screenSizeY/2
bind 3:ctrl         corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind 4:ctrl         corner bottom-right resize:screenSizeX/2;screenSizeY/2

# App Bindings
bind q:ctrl focus 'Brave Browser'
bind e:ctrl focus 'Sublime Text'
bind w:ctrl focus 'Hyper'

# Push Bindings
bind l:ctrl;cmd  push right bar-resize:screenSizeX/2
bind h:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind k:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind j:ctrl;cmd   push down  bar-resize:screenSizeY/2
bind f:ctrl   push right bar-resize:screenSizeX

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
bind 3:ctrl;alt         throw 2 resize

# Window Hints
bind esc:cmd hint QWERTYUIOP
bind tab:cmd hint QWERTYUIOP
